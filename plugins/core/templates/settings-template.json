{
  "$schema": "https://raw.githubusercontent.com/anthropics/claude-code/main/settings.schema.json",
  "permissions": {
    "allow": [
      "Bash(npm test*)",
      "Bash(npx tsc*)",
      "Bash(npx biome*)",
      "Bash(npx vitest*)",
      "Bash(npx jest*)",
      "Bash(npx eslint*)",
      "Bash(npx prettier*)",
      "Bash(git status*)",
      "Bash(git diff*)",
      "Bash(git log*)",
      "Bash(git add*)",
      "Bash(git commit*)",
      "Bash(git branch*)",
      "Bash(git checkout*)",
      "Bash(git stash*)",
      "Bash(git restore*)",
      "Bash(ls*)",
      "Bash(cat*)",
      "Bash(head*)",
      "Bash(tail*)",
      "Bash(grep*)",
      "Bash(find*)",
      "Bash(wc*)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebFetch",
      "WebSearch"
    ],
    "deny": [
      "Bash(git push*)",
      "Bash(git reset --hard*)",
      "Bash(git clean -f*)",
      "Bash(rm -rf*)",
      "Bash(sudo*)",
      "Bash(curl*|*sh)",
      "Bash(wget*|*sh)"
    ]
  },
  "env": {
    "CLAUDE_CODE_THEME": "{{THEME}}",
    "NODE_ENV": "development"
  }
}
