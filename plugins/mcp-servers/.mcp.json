{
  "$schema": "./mcp-schema.json",
  "version": "1.0.0",
  "description": "Pre-configured MCP server definitions for Claude Code plugins",
  "mcpServers": {
    "sequential-thinking": {
      "command": "npx",
      "args": ["-y", "@anthropic/sequential-thinking-server"]
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"]
    },
    "perplexity-ask": {
      "command": "npx",
      "args": ["-y", "server-perplexity-ask"],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY:-}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-filesystem", "${PROJECT_DIR:-.}"]
    },
    "git": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-git", "--repository", "${PROJECT_DIR:-.}"]
    },
    "json": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-json"]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-playwright"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-chrome-devtools"]
    },
    "docker": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-docker"]
    },
    "neon": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-neon"],
      "env": {
        "NEON_API_KEY": "${NEON_API_KEY:-}"
      }
    },
    "postgres": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-postgres", "${DATABASE_URL:-postgresql://localhost:5432/postgres}"]
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sqlite", "${SQLITE_DB_PATH:-./database.sqlite}"]
    },
    "linear": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-linear"],
      "env": {
        "LINEAR_API_KEY": "${LINEAR_API_KEY:-}"
      }
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-github"],
      "env": {
        "GITHUB_TOKEN": "${GITHUB_TOKEN:-}"
      }
    },
    "vercel": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-vercel"],
      "env": {
        "VERCEL_TOKEN": "${VERCEL_TOKEN:-}"
      }
    },
    "supabase": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-supabase"],
      "env": {
        "SUPABASE_ACCESS_TOKEN": "${SUPABASE_ACCESS_TOKEN:-}"
      }
    },
    "@21st-dev/magic": {
      "command": "npx",
      "args": ["-y", "@21st-dev/magic-mcp"],
      "env": {
        "TWENTY_FIRST_API_KEY": "${TWENTY_FIRST_API_KEY:-}"
      }
    },
    "shadcn-ui": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-shadcn-ui"]
    },
    "figma": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-figma"],
      "env": {
        "FIGMA_TOKEN": "${FIGMA_TOKEN:-}"
      }
    },
    "drizzle": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-drizzle"]
    },
    "mercadopago": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-mercadopago"],
      "env": {
        "MERCADOPAGO_ACCESS_TOKEN": "${MERCADOPAGO_ACCESS_TOKEN:-}"
      }
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-sentry"],
      "env": {
        "SENTRY_AUTH_TOKEN": "${SENTRY_AUTH_TOKEN:-}"
      }
    },
    "socket": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-socket"],
      "env": {
        "SOCKET_API_KEY": "${SOCKET_API_KEY:-}"
      }
    },
    "cloudflare-docs": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-cloudflare-docs"]
    },
    "browserstack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-browserstack"],
      "env": {
        "BROWSERSTACK_USERNAME": "${BROWSERSTACK_USERNAME:-}",
        "BROWSERSTACK_ACCESS_KEY": "${BROWSERSTACK_ACCESS_KEY:-}"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-brave-search"],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY:-}"
      }
    },
    "notion": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-notion"],
      "env": {
        "NOTION_TOKEN": "${NOTION_TOKEN:-}"
      }
    },
    "slack": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-slack"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN:-}"
      }
    },
    "redis-upstash": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-upstash"],
      "env": {
        "UPSTASH_REDIS_REST_URL": "${UPSTASH_REDIS_REST_URL:-}",
        "UPSTASH_REDIS_REST_TOKEN": "${UPSTASH_REDIS_REST_TOKEN:-}"
      }
    },
    "prisma": {
      "command": "npx",
      "args": ["-y", "@anthropic/mcp-server-prisma"]
    }
  }
}
